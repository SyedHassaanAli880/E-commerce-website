@model ProductViewModel

@foreach (var products in Model.Products)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="~/images/@products.ImagePhoto" alt="" width="130" height="120" />
            <div class="caption">
                <h3 class="pull-right">@products.Price.ToString("c")</h3>
                <h3><a asp-controller="Product" asp-action="Details" asp-route-id="@products.Id">@products.Name</a></h3>
                <h3>@products.ShortDescription</h3>
            </div>
        </div>
    </div>
}


