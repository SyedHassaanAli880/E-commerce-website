</div>

<table class="table table-condensed table-bordered" style="margin-top:1%;">

    <tr>
        <th>IN STOCK</th>
        <th>RATINGS</th>
        <th>QUANTITY</th>
        <th>ACTION</th>
    </tr>

    <tr>



        <td class="col-md-1">@Model.IsInStock</td>
        <td></td>
        <td>
            <button class="btn minus-btn disabled" type="button">-</button>
            <input type="text" id="quantity" value="1" />
            <button class="btn plus-btn">+</button>
        </td>
        <td>
            <a class="btn btn-sm btn-primary col-md-6" asp-controller="ProductManagement" asp-action="Editproduct" asp-route-id="@Model.Id">Add to cart</a>
        </td>
    </tr>


</table>

